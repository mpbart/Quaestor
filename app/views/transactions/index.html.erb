<%= stylesheet_link_tag "application", media: "all" %>

<%= turbo_frame_tag 'transactions' do %>
<body>
  <div class="ui padded grid">
    <%= render "shared/dimmer" %>
    <div class="one wide column">
    </div>
    <div class="fourteen wide column">
      <h2 class="ui center aligned header">Transactions</h2>
      <div class="ten wide row">
      <div class="ui accordion">
        <div class="active title">
          <i class="dropdown icon"></i>
          Filter Transactions
        </div>
        <div class="content">
        <%= turbo_frame_tag "search", target: "transactions" do %>
          <%= form_with url: '/transactions', method: :get, class: 'ui form' do |form| %>
            <div class="five fields">
              <div class="field">
                <%= form.label :Search %>
                <div class="ui input">
                  <%= form.text_field :q, placeholder: "Search Transactions" %>
                </div>
              </div>
              <div class="field">
                <div class="two fields">
                  <div class="field">
                    <%= form.label :start_date %>
                    <%= form.date_field :start_date, value: nil %>
                  </div>
                  <div class="field">
                    <%= form.label :end_date %>
                    <%= form.date_field :end_date, value: nil %>
                  </div>
                </div>
              </div>
              <div class="field three wide">
                <%= form.label "Filter by Account" %>
                <%= form.select :account_id, Account.all.map{ |a| [a.name, a.id] }, {include_blank: true}, {class: 'ui search dropdown'} %>
              </div>
              <div class="field">
                <%= form.label "Filter by Category" %>
                <%= form.select :plaid_category_id, PlaidCategory.all.map{ |a| [humanized_category(a), a.id] }, {include_blank: true}, {class: 'ui search dropdown'} %>
              </div>
              <div class="field">
                <%= form.label "Filter by Label" %>
                <div class="ui grid">
                  <div class="five wide column">
                    <%= form.select :label_id, Label.all.map{ |l| [l.name, l.id] }, {include_blank: true}, {class: 'ui dropdown'} %>
                  </div>
                  <div class=" six wide column right floated">
                    <%= form.submit "Filter", class: 'ui fluid primary bottom button' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
        </div>
      </div>
      </div>
      <%= render partial: "shared/account_refresh_error" %>
        <div id="recent_transactions">
          <table class="ui selectable padded basic table">
            <thead>
              <th>Date</th>
              <th>Description</th>
              <th>Account</th>
              <th>Category</th>
              <th>Labels</th>
              <th>Amount</th>
            </thead>
            <tbody>
              <% @transactions.each do |transaction| %>
                <% amount_klass = transaction.amount < 0 ? 'green-text' : 'black-text' %>
                <% row_klass = transaction.pending ? 'pending-transaction-background': '' %>
                <tr class="<%= row_klass %>" data-url="<%= transaction_path(transaction) %>" >
                  <td><%= short_format_date(transaction.date) %></td>
                  <td><%= transaction.description[..40] %></td>
                  <td><%= transaction.account&.name %></td>
                  <td><%= humanized_category(transaction.plaid_category) %></td>
                  <td>
                    <% transaction.labels.pluck(:id, :name).sort.each_with_index do |(id, name), idx| %>
                      <% color = label_idx_to_color(idx) %>
                      <a href="/transactions?label_id=<%= id %>" class="ui <%= color %> label"><%= name %></a>
                    <% end %>
                  </td>
                  <td class="<%= amount_klass %>"><%= number_to_currency(transaction.amount * -1.0) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <button class='ui right icon button' id='previous-page-button'>
            <i class='left chevron icon'></i>
          </button>
          <button class='ui right floated icon button' id='next-page-button'>
            <i class='right chevron icon'></i>
          </button>
        </div>
    </div>
    <div class="one wide column">
    </div>
  </div>
</body>
<% end %>

<%= javascript_include_tag "plaid" %>
<%= javascript_include_tag "transactions" %>
