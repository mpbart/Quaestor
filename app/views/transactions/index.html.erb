<html lang="en">
<head>
<meta charset="utf-8">
<meta name="description" content="My description">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<title>Personal Finances</title>
</head>

<%= stylesheet_link_tag "application", media: "all" %>

<body>
  <div class="ui divided padded grid">
    <div class="five wide column">
    </div>
    <div class="six wide column">
      <h3 class="ui center aligned header">Transactions</h3>
        <div id="recent_transactions">
          <table class="ui selectable basic table">
            <thead>
              <th>Date</th>
              <th>Description</th>
              <th>Category</th>
              <th>Amount</th>
            </thead>
            <tbody>
              <% @transactions.each do |transaction| %>
                <tr>
                  <td><%= short_format_date(transaction.date) %></td>
                  <td><%= transaction.description %></td>
                  <td><%= transaction.category.last %></td>
                  <td><%= number_to_currency(transaction.amount) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
    <div class="five wide column">
    </div>
  </div>
</body>

<div id="transactions-modal" class="ui tiny modal">
  <div class="header">Transaction Details</div>
  <div class="content">
    <p>something</p>
  </div>
</div>


<%= javascript_include_tag "plaid" %>
