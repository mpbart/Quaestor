<html lang="en">
<head>
<meta charset="utf-8">
<meta name="description" content="My description">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<title>Personal Finance Tracker</title>
<link rel='icon' type='image/png' href='profits.png'>
</head>

<%= stylesheet_link_tag "application", media: "all" %>

<body>
  <div class="ui divided padded grid">
    <div class="five wide column">
    <h3 class="ui center aligned header">Accounts Overview</h3>
      <div id="accounts">
        <table class="ui selectable very basic table">
          <thead>
            <th>Name</th>
            <th>Account Type</th>
            <th>Number</th>
            <th>Institution</th>
            <th>Balance</th>
          </thead>
          <tbody>
            <% @accounts.each do |account| %>
              <tr>
                <td><%= account.name %></td>
                <td><%= account.account_type %></td>
                <td><%= account.mask %></td>
                <td><%= account.institution_name %></td>
                <td><%= account.balances.last&.amount || 0 %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="six wide column">
      <h3 class="ui center aligned header">Recent Transactions Overview</h3>
        <div id="recent_transactions">
          <table class="ui selectable basic table">
            <thead>
              <th>Date</th>
              <th>Description</th>
              <th>Category</th>
              <th>Amount</th>
            </thead>
            <tbody>
              <% @transactions.each do |transaction| %>
                <tr>
                  <td><%= short_format_date(transaction.date) %></td>
                  <td><%= transaction.description %></td>
                  <td><%= transaction.plaid_category.detailed_category %></td>
                  <td><%= transaction.amount %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
    <div class="five wide column">
    </div>
  </div>
</body>

<%= javascript_include_tag "plaid" %>
