<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<nav class="navbar navbar-dark static-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" >Personal CRM</a>
</nav>

<div class="container-fluid" style="padding-top: 65px">
    <div class="row align-items-start">
        <div class="col">
            <div class='card'>
                <div class='card-body'>
                    <h5 class='card-title text-center'>Hacker News</h5>
                    <table class='table'>
                      <thead>
                        <tr>
                          <th scope='col'>Title</th>
                          <th scope='col'>Source</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @links.each do |link| %>
                          <tr> 
                            <td><%= link.title %></td>
                            <td><%= link.url %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col">
            <div class='card'>
                <div class='card-body'>
                    <h5 class='card-title text-center'>Twitter</h5>
                    <table class='table'>
                    <thead class='table'>
                      <tr>
                        <th scope='col'>User</th>
                        <th scope='col'>Tweet</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @tweets.each do |tweet| %>
                        <tr>
                          <td><%= tweet.user.screen_name %></td>
                          <td><%= tweet.full_text %></td>
                        </tr>
                      <% end %>
                    </tbody>
                </div>
            </div>
        </div>
    </div>
</div>
